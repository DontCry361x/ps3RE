			<Table key="seg_device">
				<Pair key="focus_detect"><String>enable</String></Pair>
				<Pair key="focus_priority"><String>-2</String></Pair>
			</Table>
		</Attributes>
		<Items>

			<Query
				class="type:x-xmb/folder-pixmap"
				key="seg0"
				src="#seg0"
				/>

			<Query
				class="type:x-xmb/folder-pixmap"
				key="seg_device"
